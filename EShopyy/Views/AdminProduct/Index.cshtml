
@model List<Entities.Concrete.Product>
@{
    ViewData["Title"] = "Index";
}
<a href="~/AdminProduct/Create" class="btn btn-primary">Ürün Ekle</a>
<table class="table table-bordered">
    <tr>
        <th>Ad</th>
        <th>Açıklama</th>
        <th>Fiyat</th>
        <th>Stok</th>
        <th>Popüler</th>
        <th>Onay</th>
        <th>Resim</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
            <td>
                @if (@item.Popular == true)
                {
                    <label class="btn btn-success">Evet</label>
                }
                else
                {
                    <label class="btn btn-danger">Hayır</label>
                }
            </td>
            <td>
                @if (@item.IsApproved == true)
                {
                    <label class="btn btn-success">Evet</label>
                }
                else
                {
                    <label class="btn btn-danger">Hayır</label>
                }
            </td>
            <td><img src="~/niceadmin/Image/@item.Image" width="70" height="70" />Resim</td>
            <td>@item.CategoryID</td>
            <td>@Html.ActionLink("Sil", "Delete", new { id = item.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istiyor musunuz?')" })</td>
            <td><a class="btn btn-primary" href="/AdminProduct/Güncelle/@item.ID">Güncelle</a></td>
        </tr>
    }
</table>


