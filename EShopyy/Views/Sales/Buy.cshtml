@model Entities.Concrete.Cart
@{
    ViewData["Title"] = "Buy";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<div class="model-header">
    <h2>Satın Al</h2>

</div>
<div class="container">
    @using (Html.BeginForm("Buy2", "Sales", FormMethod.Post))
    {
        <div class="modal-body">
            @Html.HiddenFor(x=>x.ID)
            <div class="form-group">
                Ürün Bilgisi: @Html.DisplayFor(x=>x.Product.Name,new {@class="form-control"})
            </div>

            <div class="form-group">
                Ürün Bilgisi: @Html.DisplayFor(x=>x.Product.Quantity,new {@class="form-control"})
            </div>

            <div class="form-group">
                <img src="~/niceAdmin/Image/@Model.Product.Image" width="80" height="80" />
            </div>

            <div class="form-group">
                Ürün Bilgisi: @Html.DisplayFor(x=>x.Product.Price,new {@class="form-control"})
            </div>

        </div>
        <div class="model-footer" style="float:right"></div>
        <button class="btn btn-success">Satın Al</button>
        <a href="/Cart/Index" class="btn btn-dark">İptal</a>
    }



</div>

